@model List<DoAnTotNghiepBanGiay.Models.CartItem>

@{
    ViewBag.Title = "ThongTinKhachHang";
    Layout = "~/Views/Shared/_layoutClient.cshtml";
}

@section sectionHeader{


    <style>
        .content {
            min-height: 300px !important;
        }


        .continue:hover {
            background: #20AF53 !important;
        }

        .continue {
            background: #ea3a3c !important;
            transition: 0.3s !important;
        }

        a {
            transition: 0.3s;
        }

    </style>

<link href="~/Assets/Client/css/More/Wstyle1.css" rel="stylesheet" />
<link href="~/Assets/Client/css/More/MyCSS___.css" rel="stylesheet" />

}


@section jsFooter{

    <script src="/Assets/Client/js/controller/cartController.js"></script>
}




<div class="content">
    <div class="ct-body clearfix" id="cart" style="margin: 30px auto">



        <div class="ct-right">
            @if (Model.Count != 0)
            {

                <div class="block products clearfix">
                    <div class="block-ct">
                        @using (Html.BeginForm("ThongTinKhachHang", "GioHang", FormMethod.Post))
                        {     <form id="frmInsertOrder" class="left-cart" novalidate="novalidate">
                            <div class="cart-top clearfix">
                                <div class="row row-th">
                                    <div class="col-md-3"><a href="#">Giỏ hàng</a></div>
                                    <div class="col-md-3 active"><a href="#">Thông tin khách hàng</a></div>
                                    <div class="col-md-3"><a href="#">Xem lại đơn hàng</a></div>
                                    <div class="col-md-3"><a href="#">Hoàn thành</a></div>
                                </div><!--End row-->


                                <h3 class="title-cart">Thông tin khách hàng</h3>
                                <div class="row">
                                    <div class="col-md-3">
                                        Họ và tên <span class="red">*</span>
                                    </div>
                                    <div class="col-md-9">
                                        <input name="txtName" id="txtName" type="text" class="cart-text">
                                    </div>
                                </div><!--row-->

                                <div class="row">
                                    <div class="col-md-3">
                                        Số điện thoại <span class="red">*</span>
                                    </div>
                                    <div class="col-md-9">
                                        <input name="txtPhone" id="txtPhone" type="number" class="cart-text">
                                    </div>
                                </div><!--row-->
                                <div class="row">
                                    <div class="col-md-3">
                                        Địa chỉ <span class="red">*</span>
                                    </div>
                                    <div class="col-md-9">
                                        <input name="txtAddress" id="txtAddress" type="text" class="cart-text">
                                    </div>
                                </div><!--row-->
                                <div class="row">
                                    <div class="col-md-3">
                                        Email <span class="red">*</span>
                                    </div>
                                    <div class="col-md-9">
                                        <input name="txtEmail" id="txtEmail" type="email" class="cart-text">
                                    </div>
                                </div><!--row-->



                            </div><!--End cart-top-->

                            <div class="cart-bottom clearfix">

                                <a href="/GioHang" class="shopping" style="border-right: 1px solid white;"><i class="fa fa-chevron-circle-left" style="padding-right: 5px"></i>Xem lại giỏ hàng</a>
                                &nbsp;
                                @*<a href="/Cart/CheckAgain" class="continue">Tiếp tục thanh toán<i class="fa fa-chevron-circle-right"></i></a>*@
                                <button type="submit" class="continue" value="submit" style="border: none; border-right: 1px solid white!important;">Tiếp tục thanh toán<i style="padding-left: 5px" class="fa fa-chevron-circle-right"></i></button>

                            </div><!--End cart-bottom-->
                        </form>
                        }

                    </div><!--End block-ct-->
                </div><!--End block-->

            }
            else
            {
                <div class="cart-bottom clearfix">
                    <h2> Giỏ hàng của bạn hiện giờ chưa có sản phẩm!</h2><br /><br />
                    <a href="/" class="shopping" style="border-right: 1px solid white;"><i class="fa fa-chevron-circle-left" style="padding-right: 5px"></i>Quay lại mua hàng</a>
                </div>
            }

        </div>
    </div>
</div>