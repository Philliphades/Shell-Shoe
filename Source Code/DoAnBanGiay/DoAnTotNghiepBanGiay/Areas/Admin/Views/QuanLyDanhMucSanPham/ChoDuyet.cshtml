@model PagedList.IPagedList<Model.EF.DANHMUCSANPHAM>
@using PagedList.Mvc;



@{
    ViewBag.Title = "Chờ duyệt danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section sectionhead{
    <style>
        th {
            text-align: center;
        }

        td.chucnang {
            text-align: center;
        }
    </style>
}



<div class="=row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    DANH SÁCH DANH MỤC CHỜ DUYỆT
                </h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                @using (Html.BeginForm("ChoDuyet", "QuanLyDanhMucSanPham", FormMethod.Get))
                {
                    <div class="row" style="padding-bottom: 10px!important">
                        <div class="col-lg-8">
                            <div class="input-group margin">
                                <input type="text" class="form-control" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập tên danh mục hoặc danh mục cha để tìm kiếm...">
                                <span class="input-group-btn">
                                    <button class="btn btn-info btn-flat" type="submit">Tìm</button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã danh mục</th>
                                <th>Tên danh mục</th>
                                <th>Mã cha</th>
                                <th>Ngày tạo</th>
                                <th>Người tạo</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        @item.ID
                                    </td>
                                    <td class="tb_tenbanghi">
                                        @item.TenDanhMuc
                                    </td>
                                    <td>
                                        @item.IDCha
                                    </td>
                                    <td>@item.NgayTao</td>
                                    <td> @item.NguoiTao</td>
                                    <td>
                                        @*<a href="/Admin/ProductManager/@item.Metatitle-@item.ID" class="clink_llll" title="Bỏ duyệt bài đăng này">Bỏ active</a>*@
                                        @Ajax.ActionLink("Duyệt", "Duyet", new { @id = item.ID }, new AjaxOptions
                                            {
                                                Confirm = "Bạn có chắc chắn muốn duyệt danh mục này?",
                                                OnComplete = "$('#row_" + @item.ID + "').fadeOut(300)",
                                                HttpMethod = "Post"
                                            }, new { @class = "clink_rrrr", @title = "Duyệt danh mục này", area = "Admin" })
                                        <br />
                                        <a href="/Admin/QuanLyDanhMucSanPham/CapNhat/@item.ID">Cập nhật</a>
                                        <br />
                                        <a href="/Admin/QuanLySanPham/Khoa/@item.ID">Khóa</a>
                                        @*@Html.ActionLink("Cập nhật", "CapNhat", "QuanLySanPham", new {@id=item.ID})*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @Html.PagedListPager(Model, page => Url.Action("ChoDuyet", new { page, @searchString = @ViewBag.searchstring }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
