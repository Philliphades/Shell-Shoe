@model List<Model.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    var vbcs = (Model.EF.DONHANG)ViewBag.vbcs;

    decimal vbtongtien = (decimal)ViewBag.vb_tongtien;
}

@section sectiontitleheader{
    CHI TIẾT ĐƠN HÀNG
}



<div class="block products clearfix">
    <div class="block-ct">
        <div class="cart-top clearfix">
            <h3 class="title-cart">Thông tin khách hàng</h3>
            <div class="row">
                <div class="col-md-3">
                    Họ và tên <span class="red">*</span>
                </div>
                <div class="col-md-9">
                    <label class="red">@vbcs.TenKhachHang</label>
                </div>
            </div><!--row-->

            <div class="row">
                <div class="col-md-3">
                    Số điện thoại <span class="red">*</span>
                </div>
                <div class="col-md-9">
                    <label class="red">@vbcs.DienThoaiKhachHang</label>
                </div>
            </div><!--row-->
            <div class="row">
                <div class="col-md-3">
                    Địa chỉ <span class="red">*</span>
                </div>
                <div class="col-md-9">
                    <label class="red">@vbcs.DiaChiKhachHang</label>
                </div>
            </div><!--row-->
            <div class="row">
                <div class="col-md-3">
                    Email <span class="red">*</span>
                </div>
                <div class="col-md-9">
                    <label class="red">@vbcs.EmailKhachHang</label>
                </div>

            </div>

            <div class="row">
                <div class="col-md-3">
                    Ngày tạo <span class="red">*</span>
                </div>
                <div class="col-md-9">
                    <label class="red">@vbcs.NgayTao</label>
                </div>

            </div>


            <h3 class="title-cart">Thông tin đơn hàng</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tbody>
                        <tr>
                            <th style=" width: 200px;">Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th style="width: 150px;">Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Cỡ</th>
                            <th>Tổng tiền</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="cartItem" data-id="@item.productID">
                                <td>
                                    <a href="/SanPham/ChiTiet/@item.productID">
                                        <img src="@item.productAvatar" width="130" alt="@item.productName">
                                    </a>
                                    @*<img src="@item.Product.AvatarImage" width="174" alt="">*@
                                </td>
                                <td>
                                    <p><a href="/SanPham/ChiTiet/@item.productID">@item.productName</a></p>
                                </td>
                                <td>
                                    <div class="quantity">
                                        @*<input type="text" value="@item.Quantity" data-id="@item.Product.ID" class="quantity-text">*@
                                        <input type="text" class="prquantity" style="display:none" name="name" value=@item.productQuantity />
                                        @item.productQuantity
                                        @*<a href="#" class="minus minus-add">+</a>
                                            <a href="#" class="plus plus-sub">-</a>*@

                                    </div><!--End quantity-->
                                </td>
                                @*-----------ĐƠN GIÁ----------------------*@


                                <td style="text-align:right;"><span class="price row-price" data-price="@item.productPrice.Value.ToString("N0")">@item.productPrice.Value.ToString("N0")</span></td>
                                <td style="text-align:right;"> @item.cogiay</td>



                                @*-----------Thành Tiền----------------------*@

                                <td style="text-align:right;"><span class="price row-total" data-total="@(@item.productQuantity * @item.productPrice)">@((@item.productQuantity * @item.productPrice).Value.ToString("N0"))</span></td>

                            </tr>
                        }

                        <tr>
                            <td colspan="2">&nbsp;</td>
                            <td colspan="4" style="text-align:left; position : relative; clear: both;" class="border-left">
                                <span class="amount">
                                    Tổng giá trị (Đã bao gồm VAT)
                                </span>
                                <span style="color: #ea3a3c; position: absolute; right: 10px; text-transform: uppercase; font-size: 18px; font-weight: 600;">
                                    @vbtongtien.ToString("N0") VNĐ
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div><!--End cart-top-->
        <div class="cart-bottom clearfix" style="margin-bottom: 50px">
            <a href="/Admin/QuanLyDonHang" class="btn btn-primary">CHấp nhận</a>
            @*<button type="button" class="btn btn-primary" >Chấp nhận</button>*@
        </div><!--End cart-bottom-->

    </div><!--End block-ct-->
</div><!--End block-->
